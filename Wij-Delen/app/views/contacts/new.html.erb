<div align="center">
  <h3>Stuur Kees</h3>

  <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
    <%= f.input :name, label:"Naam", :required => true %>
    <%= f.input :email, label:"E-mail", :required => true %>
    <%= f.input :message, label:"Bericht", :as => :text, :required => true %>
    <div class= "hidden">
      <%= f.input :nickname, :hint => 'Leave this field blank!' %>
    </div>
    <div>
      </br>
      <%= f.button :submit, 'Bericht verzenden', :class=> "btn btn-primary" %>
    </div>
  <% end %>
</div>